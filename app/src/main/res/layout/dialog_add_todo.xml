<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="10dp">

    <EditText
        android:id="@+id/ed_add_todoList_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="10dp"
        android:hint="@string/plan_todoList_add_todoList_content"
        android:singleLine="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/tv_add_todo_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_margin="10dp"
        android:text="@string/add_todo_btn_content_save"
        android:textSize="17sp"
        app:layout_constraintEnd_toStartOf="@+id/tv_add_todo_cancel"
        app:layout_constraintTop_toBottomOf="@+id/ed_add_todoList_content" />

<!--    <TextView
        android:id="@+id/add_todo_division"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="@string/add_todo_division"
        android:textSize="17sp"
        app:layout_constraintEnd_toStartOf="@+id/tv_add_todo_cancel"
        app:layout_constraintTop_toBottomOf="@+id/ed_add_todoList_content" />-->

    <Button
        android:id="@+id/tv_add_todo_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_margin="10dp"
        android:text="@string/add_todo_btn_content_cancel"
        android:textSize="17sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ed_add_todoList_content" />

</androidx.constraintlayout.widget.ConstraintLayout>