<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.view.SignUpActivity">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/base_app_color"
            android:theme="?attr/actionBarTheme"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:titleTextColor="@color/white">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="회원가입"
                android:textSize="25sp" />

        </androidx.appcompat.widget.Toolbar>

        <LinearLayout
            android:id="@+id/li_used_email"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginTop="30dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolbar">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:text="@string/signup_create_email" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/ed_used_email"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="@string/signup_create_email_hint"
                    android:lines="1"
                    android:singleLine="true" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/li_email_check_alarm"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/iv_email_alarm"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="10dp"
                    android:src="@drawable/ic_check_circle" />

                <TextView
                    android:id="@+id/tv_email_alarm"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_marginStart="5dp"
                    android:text="@string/signup_user_email_use_alarm" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/li_create_password"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/li_used_email">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:text="@string/signup_create_password" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/ed_create_password"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="@string/signup_create_password_hint"
                    android:inputType="textPassword"
                    android:lines="1"
                    android:singleLine="true" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/li_pw"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/iv_pw_alarm"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="10dp"
                    android:src="@drawable/ic_check_circle" />

                <TextView
                    android:id="@+id/tv_pw_alarm"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_marginStart="5dp"
                    android:text="@string/signup_create_password_use_alarm" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/li_create_password_check"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/li_create_password">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:text="@string/signup_create_password_check" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/ed_create_password_check"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="@string/signup_create_password_check_hint"
                    android:inputType="textPassword"
                    android:lines="1"
                    android:singleLine="true" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/li_pw_check"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/iv_pw_check_alarm"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="10dp"
                    android:src="@drawable/ic_check_circle" />

                <TextView
                    android:id="@+id/tv_pw_check_alarm"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_marginStart="5dp"
                    android:text="@string/signup_create_password_check_alarm" />

            </LinearLayout>

        </LinearLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_signup_finish"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/base_app_color"
            android:text="@string/btn_signup_finish"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>